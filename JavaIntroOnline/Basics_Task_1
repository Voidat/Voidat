//Найдите значение функции: z = (a - 3)*b/2 + c)

import java.util.Scanner;//Импортировал класс Scanner из библиотеки Java.
public class Main {

	public static void main(String[] args) {
		
	Scanner num = new Scanner(System.in);//Объявил переменную num, которая относится к классу Scanner.
		System.out.println("Input variable a:");//Использовал метод вывода строки с переводом на новую строку.
		double a = 0;//Инициализировал переменную a.
		
			if(num.hasNextDouble()) {//Использовал условный оператор if. Если условие true, то выполняется if.
				a = num.nextDouble();//Метод сканера, который считывает то, что ввел пользователь, а именно действительные значения.
												
			}else {//Использовал ключевое слово else. Если условие false, то выполняется оператор после else.									
			return;//Если условие false, то данный оператор выходит из метода.
			}		
			
		
	Scanner num1 = new Scanner(System.in);
		System.out.println("Input variable b:");
		double b = 0;
			
			if(num1.hasNextDouble()) {
				b = num1.nextDouble();
													
			}else {									
			return;
			}
				
	Scanner num2 = new Scanner(System.in);
		System.out.println("Input variable c:");
		double c = 0;
				
				if(num2.hasNextDouble()) {
					c = num2.nextDouble();
														
				}else {									
				return;
				}	
		double z = (a-3)*(b/2) + c;//Инициализировал переменную z.
					
			System.out.print("The value of z is " + z);
 }		
}
